<?xml version="1.0" ?>
<robot name="neon" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find neon_description)/urdf/materials.xacro" />
  <xacro:include filename="$(find neon_description)/urdf/neon.trans" />
  <xacro:include filename="$(find neon_description)/urdf/neon.gazebo" />
  <xacro:include filename="$(find neon_description)/urdf/lidar.xacro" />

  <!-- Base Link -->
  <link name="base_link">
    <inertial>
      <origin xyz="3.428493980213885e-05 0.00027285771811239837 0.07072496870871087" rpy="0 0 0"/>
      <mass value="26.704395059494114"/>
      <inertia ixx="0.153521" iyy="0.077857" izz="0.202277" ixy="4.6e-05" iyz="0.000429" ixz="9e-06"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find neon_description)/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find neon_description)/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Wheel -->
  <link name="left_wheel_link_1">
    <inertial>
      <origin xyz="-0.014999578661085491 0 0" rpy="0 0 0"/>
      <mass value="2.663442251713426"/>
      <inertia ixx="0.004794" iyy="0.002597" izz="0.002597" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0.094132 0.05 -0.061" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find neon_description)/meshes/left_wheel_link_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0.094132 0.05 -0.061" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find neon_description)/meshes/left_wheel_link_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <!-- Right Wheel -->
  <link name="right_wheel_link_1">
    <inertial>
      <origin xyz="0.015000421338914507 0 0" rpy="0 0 0"/>
      <mass value="2.663442251713426"/>
      <inertia ixx="0.004794" iyy="0.002597" izz="0.002597" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="-0.095868 0.05 -0.061" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find neon_description)/meshes/right_wheel_link_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="-0.095868 0.05 -0.061" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find neon_description)/meshes/right_wheel_link_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <!-- Lidar Link -->
  <link name="lidar_link_1">
    <inertial>
      <origin xyz="-8.94e-07 -0.0004776 0.0099648" rpy="0 0 0"/>
      <mass value="0.19058022841643052"/>
      <inertia ixx="2.5e-05" iyy="2.6e-05" izz="3.7e-05" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0.0 -0.08 -0.116" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find neon_description)/meshes/lidar_link_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0.0 -0.08 -0.116" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find neon_description)/meshes/lidar_link_1.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <!-- Joints -->
  <joint name="Revolute_4" type="continuous">
    <origin xyz="-0.094132 -0.05 0.061" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel_link_1"/>
    <axis xyz="-1.0 0.0 0.0"/>
  </joint>

  <joint name="Revolute_5" type="continuous">
    <origin xyz="0.095868 -0.05 0.061" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel_link_1"/>
    <axis xyz="1.0 0.0 0.0"/>
  </joint>

  <joint name="Rigid_6" type="fixed">
    <origin xyz="0.0 0.08 0.116" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="lidar_link_1"/>
  </joint>

  <!-- Lidar Sensor Plugin from lidar.xacro -->
  <xacro:lidar_sensor_plugin lidar_link="lidar_link_1" />
  <!-- Lidar Sensor Plugin -->
  



</robot>
